<!DOCTYPE html>
<html>
<head>
    <!-- Metadata section -->
    @RenderSection("Metadata", false)
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, maximum-scale=1.0, minimum-scale=1.0">

    <title>@ViewData["Title"]</title>

    <!-- Styles section -->
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Lobster&subset=latin,cyrillic" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("/Content/Styles/layout.css")" />
    @RenderSection("Styles", false)
    <style type="text/css">
        div.message {
            display: none;
        }
    </style>
</head>
<body>
    <div id="wrapper">
        <div id="header" class="shadow">
            <div class="top-line">
                EatPrice
            </div>
        </div>
        <div id="content">
            @RenderBody()
        </div>
        <div id="foother" class="shadow">
            <span class="bold">Eldar and company inc.</span>
        </div>
    </div>
    <script type="text/javascript" src="@Url.Content("~/Content/Scripts/zepto.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Scripts/general.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //$(window)[0].scrollTo(0, 0);
        })
    </script>
    @RenderSection("Scripts", false)

</body>
</html>